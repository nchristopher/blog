{
	"name": "blog",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"start": "cross-env SOCKET=true node ./scripts/next-remote-watch.js ./data",
		"dev": "next dev",
		"build": "next build && node ./scripts/generate-sitemap.mjs",
		"serve": "next start",
		"analyze": "cross-env ANALYZE=true next build",
		"lint": "next lint --fix --dir pages --dir components --dir lib --dir layouts --dir scripts",
		"prepare": "husky install",
		"compose": "node ./scripts/compose.js"
	},
	"dependencies": {
		"@giscus/react": "2.0.3",
		"@tailwindcss/typography": "0.5.2",
		"autoprefixer": "10.4.5",
		"esbuild": "0.14.38",
		"github-slugger": "1.4.0",
		"gray-matter": "4.0.3",
		"image-size": "1.0.1",
		"mdx-bundler": "9.0.0",
		"next": "12.1.6",
		"next-themes": "0.1.1",
		"postcss": "8.4.12",
		"preact": "10.7.1",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"reading-time": "1.5.0",
		"rehype-autolink-headings": "6.1.1",
		"rehype-citation": "0.4.0",
		"rehype-katex": "6.0.2",
		"rehype-prism-plus": "1.3.2",
		"rehype-slug": "5.0.1",
		"remark-gfm": "3.0.1",
		"remark-math": "5.1.1",
		"sharp": "0.30.4",
		"smoothscroll-polyfill": "0.4.4",
		"tailwindcss": "3.0.24",
		"unist-util-visit": "4.1.0"
	},
	"devDependencies": {
		"@next/bundle-analyzer": "12.1.5",
		"@svgr/webpack": "6.2.1",
		"@tailwindcss/forms": "0.5.0",
		"cross-env": "7.0.3",
		"dedent": "0.7.0",
		"eslint": "8.14.0",
		"eslint-config-next": "12.1.5",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-jsx-a11y": "6.5.1",
		"eslint-plugin-prettier": "4.0.0",
		"file-loader": "6.2.0",
		"globby": "13.1.1",
		"husky": "7.0.4",
		"inquirer": "8.2.4",
		"lint-staged": "12.4.1",
		"next-remote-watch": "1.0.0",
		"prettier": "2.6.2",
		"socket.io": "4.5.0",
		"socket.io-client": "4.5.0"
	},
	"lint-staged": {
		"*.+(js|jsx|ts|tsx)": [
			"eslint --fix"
		],
		"*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
			"prettier --write"
		]
	}
}
